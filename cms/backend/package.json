{
  "name": "cyeyes-cms-backend",
  "version": "1.0.0",
  "description": "CyEyes CMS Backend API - Secure, bilingual content management system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx src/config/migrate.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:content": "tsx src/scripts/seed-content.ts",
    "db:seed:privaguard": "tsx src/scripts/seed-privaguard.ts",
    "db:setup": "npm run db:push && npm run db:seed && npm run db:seed:content",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "security:audit": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "cms",
    "api",
    "express",
    "typescript",
    "security",
    "owasp"
  ],
  "author": "CyEyes",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "file-type": "^21.0.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.29.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.4",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.33.5",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "@types/sanitize-html": "^2.9.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.0",
    "drizzle-kit": "^0.20.9",
    "eslint": "^8.56.0",
    "pm2": "^5.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
