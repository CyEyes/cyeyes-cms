# ============================================
# CyEyes CMS Backend - Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database
DATABASE_PATH=./database/cyeyes.db

# JWT Authentication
JWT_SECRET=your-super-secure-256-bit-secret-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting (defaults, can be overridden in admin)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=900000

# File Uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx
ALLOWED_VIDEO_TYPES=mp4,webm
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Email (optional - for future features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@cyeyes.com
# SMTP_PASS=your-email-password
# SMTP_FROM=CyEyes <noreply@cyeyes.com>

# Admin Account (first-time setup)
ADMIN_EMAIL=admin@cyeyes.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_NAME=CyEyes Administrator
